          target="_blank"
          rel="noopener noreferrer"
          class="group flex flex-col items-start gap-3 md:gap-6 p-4 md:p-8 rounded-xl md:rounded-2xl transition-all duration-300 hover:scale-105"
          style="background: rgb(var(--color-bg-primary)); border: 1px solid rgb(var(--color-border));"
        >
          <div class="flex-shrink-0">
            <svg class="w-8 h-8 md:w-16 md:h-16" fill="currentColor" viewBox="0 0 24 24">
              <defs>
                <linearGradient id="tiktok-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#00f2ea;stop-opacity:1" />
                  <stop offset="100%" style="stop-color:#ff0050;stop-opacity:1" />
