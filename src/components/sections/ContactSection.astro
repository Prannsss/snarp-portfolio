---
import FadeIn from '../FadeIn';
---
<section id="contact" class="section py-20 md:py-32" style="background: rgb(var(--color-bg-secondary));">
  <FadeIn client:visible>
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="mb-16 text-4xl md:text-6xl text-center font-bold" style="color: rgb(var(--color-text-primary));">Let's Work Together</h2>
      
      <!-- Contact Grid -->
      <div class="grid grid-cols-2 gap-4 md:gap-8 lg:gap-12 max-w-5xl mx-auto">
        
        <!-- Email -->
        <a 
          href="mailto:vfrancelaurence@gmail.com"
          class="group flex flex-col items-start gap-3 md:gap-6 p-4 md:p-8 rounded-xl md:rounded-2xl transition-all duration-300 hover:scale-105"
          style="background: rgb(var(--color-bg-primary)); border: 1px solid rgb(var(--color-border));"
        >
          <div class="flex-shrink-0">
            <svg class="w-8 h-8 md:w-16 md:h-16 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-xs md:text-sm mb-1" style="color: rgb(var(--color-text-secondary));">Send me an email:</p>
            <p class="text-sm md:text-xl font-medium break-all group-hover:text-blue-500 transition-colors" style="color: rgb(var(--color-text-primary));">vfrancelaurence@gmail.com</p>
          </div>
        </a>

        <!-- LinkedIn -->
        <a 
          href="https://www.linkedin.com/in/francelaurence-velarde/"
          target="_blank"
          rel="noopener noreferrer"
          class="group flex flex-col items-start gap-3 md:gap-6 p-4 md:p-8 rounded-xl md:rounded-2xl transition-all duration-300 hover:scale-105"
          style="background: rgb(var(--color-bg-primary)); border: 1px solid rgb(var(--color-border));"
        >
          <div class="flex-shrink-0">
            <svg class="w-8 h-8 md:w-16 md:h-16 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
