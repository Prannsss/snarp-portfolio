        <a 
          href="https://facebook.com/francelaurence.velarde"
          target="_blank"
          rel="noopener noreferrer"
          class="group flex flex-col items-start gap-3 md:gap-6 p-4 md:p-8 rounded-xl md:rounded-2xl transition-all duration-300 hover:scale-105"
